<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="TestAndBenchmark.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestAndBenchmark"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Original image:" Margin="0,10,0,0"/>

            <Image Height="200" Width="200" Stretch="UniformToFill" HorizontalAlignment="Left" x:Name="imagecontrol"/>
            
            <VariableSizedWrapGrid Orientation="Horizontal" x:Name="resultgrid" Margin="0,10,0,0" HorizontalChildrenAlignment="Left" VerticalChildrenAlignment="Top">
                
            </VariableSizedWrapGrid>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Button Click="Button_Click" >Run benchmarks</Button>
            <TextBlock Text="{x:Bind Benchmarks.Results, Mode=OneWay}" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
